<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="resolution" default="VGA"/>
  <arg name="fps" default="0"/>
  <arg name="exposure" default="100"/>
  <arg name="gain" default="50"/>

<!--
  <node pkg="snap_cam" type="snap_cam_publisher_node" name="snap_cam_highres_publisher" output="screen" launch-prefix="/home/linaro/ws/src/snap_cam/launch/run_tmux" >
-->
  <node pkg="snap_cam" type="snap_cam_publisher_node" name="snap_cam_highres_publisher" output="screen">

    <!--
    "optflow" or "highres" -->
    <param name="camera_type" value="highres"/>

    <!--
    highres:      QVGA  : (320,240)
                  VGA   : (640,480)
                  720p  : (1280,720)
                  1080p : (1920,1080)
                  4k    : (4096,2160) -->
    <param name="camera_resolution" value="$(arg resolution)"/>

    <!--
    highres: 0: 15 1: 24 2: 30 3: 60 4: 90 6: 120 -->
    <param name="camera_fps_idx" value="$(arg fps)"/>

    <!--
    exposure: integer between 0 and 511 --> 
    <param name="exposure" value="$(arg exposure)"/>

    <!--
    gain: integer between 0 and 255 -->
    <param name="gain" value="$(arg gain)"/>

    <param name="topic_name" value="image"/>
  </node>
</launch>
